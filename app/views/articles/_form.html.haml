=form_with model: @article do |form|
  %div
    =form.label :title
    %br
    =form.text_field :title
    - @article.errors.full_messages_for(:title).each do |error|
      %p= error
  %div
    =form.label :body
    %br
    =form.text_field :body
    - @article.errors.full_messages_for(:body).each do |error|
      %p= error
  %div
    =form.submit